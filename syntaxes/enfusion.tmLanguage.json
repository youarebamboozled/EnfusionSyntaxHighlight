{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Enfusion Script",
	"patterns": [
		{
			"begin": "/\\*",
			"end": "\\*/",
			"captures": {
				"0": {
					"name": "punctuation.definition.comment.enfusion"
				}
			},
			"name": "comment.block.enfusion"
		},
		{
			"begin": "//",
			"end": "$",
			"captures": {
				"0": {
					"name": "punctuation.definition.comment.enfusion"
				}
			},
			"name": "comment.line.double-slash.enfusion"
		},
		{
			"begin": "\"",
			"end": "\"",
			"captures": {
				"0": {
					"name": "punctuation.definition.string.begin.enfusion"
				},
				"1": {
					"name": "punctuation.definition.string.end.enfusion"
				}
			},
			"name": "string.quoted.double.enfusion",
			"patterns": [
				{
					"match": "\\\\.",
					"name": "constant.character.escape.enfusion"
				}
			]
		},
		{
			"begin": "'",
			"end": "'",
			"captures": {
				"0": {
					"name": "punctuation.definition.string.begin.enfusion"
				},
				"1": {
					"name": "punctuation.definition.string.end.enfusion"
				}
			},
			"name": "string.quoted.single.enfusion",
			"patterns": [
				{
					"match": "\\\\.",
					"name": "constant.character.escape.enfusion"
				}
			]
		},
		{
			"match": "\\b(abstract|as|base|bool|break|byte|case|catch|checked|class|const|continue|decimal|default|delegate|do|double|else|enum|event|explicit|extern|finally|fixed|float|for|foreach|goto|if|implicit|in|int|interface|internal|is|lock|long|namespace|new|null|object|operator|out|override|params|private|protected|public|readonly|ref|return|sbyte|sealed|short|sizeof|stackalloc|static|struct|switch|this|throw|try|typeof|uint|ulong|unchecked|unsafe|ushort|using|virtual|void|volatile|while)\\b",
			"name": "keyword.control.enfusion"
		},
		{
			"match": "\\b(add|alias|ascending|async|await|by|descending|dynamic|equals|from|get|global|group|into|join|let|nameof|on|orderby|partial|remove|select|set|value|var|when|where|yield)\\b",
			"name": "keyword.other.enfusion"
		},
		{
			"match": "\\b(SCR_[a-zA-Z0-9_]+)\\b",
			"name": "entity.name.function.enfusion"
		},
		{
			"match": "\\b(Attribute|string|ResourceName|IEntity)\\b",
			"name": "entity.name.type.enfusion"
		},
		{
			"match": "\\b([A-Z]\\w*_[a-zA-Z]\\w*)\\b",
			"name": "entity.name.class.enfusion"
		},
		{
			"match": "\\b([a-zA-Z]\\w*)\\s*\\(",
			"name": "entity.name.function.enfusion"
		},
		{
			"match": "\\b([a-zA-Z0-9_]+)\\b",
			"name": "variable.other.member.enfusion"
		},
		{
			"match": "\\b(true|false)\\b",
			"name": "constant.language.enfusion"
		}
	],
	
	"scopeName": "source.enfusion"
}